<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 1. COLLAPSED VIEW (The Floating Icon) -->
    <RelativeLayout
        android:id="@+id/collapse_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:visibility="visible">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_round"
            android:padding="2dp" />
            
        <!-- Online Indicator -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="#00FF00"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <!-- 2. EXPANDED VIEW (The Coding Terminal) -->
    <LinearLayout
        android:id="@+id/expanded_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E1E1E"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:elevation="8dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:background="#252526">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple Rick AI // Terminal"
                android:textColor="#00FF00"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FFFFFF"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Chat History -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000000"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/chat_history_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Input Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <EditText
                android:id="@+id/input_query"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:hint="Type code or query..."
                android:textColorHint="#888888"
                android:padding="10dp"
                android:maxLines="3"/>

            <ImageView
                android:id="@+id/send_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_send"
                android:tint="#00FF00"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
